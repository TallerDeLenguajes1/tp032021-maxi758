@{
}
@model List<tp03_2021.Entities.Cadete>

<div class="text-center">
    <h2 class="display-3 mb-3 text-dark">Listado de Cadetes</h2>
    <table class="table table-active table-striped table-bordered alert-dark" >
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">Teléfono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Telefono</td>

                <td>
                    <form asp-action="Delete" asp-controller="Cadete" method="post">
                        <input type="hidden" id="id" name="id" value="@item.Id">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Edit" asp-controller="Cadete" method="post">
                        <input type="hidden" id="id" name="id" value="@item.Id">
                        <button type="submit" class="btn btn-sm btn-success">Editar</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="btn">
        <a class="btn btn-primary" asp-area="" asp-controller="Cadete" asp-action="AltaCadete">Nuevo Cadete</a>
    </div>
</div>