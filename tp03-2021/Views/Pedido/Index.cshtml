@{
}
@model List<tp03_2021.ViewModels.PedidoGetViewModel>
<div class="text-center">
    <h2 class="display-3 mb-3 text-dark">Listado de Pedidos</h2>
    <table class="table table-active table-striped table-bordered alert-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Cliente</th>
                <th scope="col">Estado</th>
                <th scope="col">Observaciones</th>
                <th scope="col">Pedidos Por cliente</th>
                <th scope="col" colspan="2">Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Cliente.Nombre</td>
                    <td>@Enum.GetName(item.EstadoPedido)</td>
                    <td>@item.Observaciones</td>
                    <td>@item.CantidadPedidos</td>

                    <td>
                        <form asp-action="Delete" asp-controller="Pedido" method="post">
                            <input type="hidden" id="Id" name="Id" value="@item.Id">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Edit" asp-controller="Pedido" method="post">
                            <input type="hidden" id="Id" name="Id" value="@item.Id">
                            <button type="submit" class="btn btn-sm btn-success">Editar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="btn">
        <a class="btn btn-primary" asp-area="" asp-controller="Pedido" asp-action="AltaPedido">Nuevo Pedido</a>
    </div>
</div>