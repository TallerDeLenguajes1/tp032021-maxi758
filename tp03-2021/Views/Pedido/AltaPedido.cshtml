@model tp03_2021.ViewModels.PedidoViewModel


    <h4>Pedido</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CrearPedido" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="Id" class="control-label"></label>
                    <input name="Id" class="form-control" type="hidden" />

                </div>

                <div class="form-group">
                    <label for="Cadete" class="control-label">Seleccione cadete</label>
                    <select for="Cadete" name="CadeteId" class="form-control">
                        @foreach (var Cadete in Model.Cadetes)
                        {
                            <option value="@Cadete.Id">@Cadete.Nombre</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="ClienteId" class="control-label">Seleccione cliente</label>
                    <select for="ClienteId" name="ClienteId" class="form-control">
                        @foreach (var Cliente in Model.Clientes)
                        {
                            <option value="@Cliente.Id">@Cliente.Nombre</option>
                        }
                    </select>
                </div>
                
                <div class="bg-transparent">
                    <div class="form-group">
                        <label for="Observaciones" class="control-label">Observaciones</label>                        
                        <textarea name="observaciones" rows="10" cols="50" class="text-black-50 form-control" placeholder="Observaciones"></textarea>                        
                    </div>

                    <div class="form-group">
                        <label for="Estado" class="control-label">Estado del pedido</label>
                        <select name="Estado">
                            <option value="1">Recibido</option>
                            <option value="2">Realizandose</option>
                            <option value="3">Entregado</option>
                            <option value="4">Desconocido</option>
                        </select>
                        <span validation-for="Estado" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver</a>
    </div>
