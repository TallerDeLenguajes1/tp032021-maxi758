@model tp03_2021.Entities.Pedido

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AltaPedido</title>
</head>
<body>

    <h4>Pedido</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CrearPedido" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" value="@Model.Id" type="hidden" />

                </div>
                <div class="form-check-inline">
                    <div class="form-group">
                        <label asp-for="Cliente" class="control-label"></label>
                        @*<input asp-for="Cliente" type="text" class="form-control" value="@Model.Cliente" />*@

                        <select asp-for="Cliente.Id">
                            @foreach (var Cliente in Model.Cliente)
                            {
                                <option value="@Cliente.Id">@Cliente.Nombre</option>
                            }
                        </select>

                    </div>
                    <div class="form-group">
                        <label asp-for="Cadete" class="control-label"></label>
                        @*<input asp-for="Cadete" type="text" class="form-control" value="@Model.Cadete" />*@

                        <select asp-for="Cadete.Id">
                            @foreach (var Cadete in Model.listadoDeCadetes)
                            {
                                <option value="@Cadete.Id">@Cadete.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="bg-transparent">
                    <div class="form-group">
                        <label asp-for="Observaciones" class="control-label"></label>
                        <div>
                            <textarea asp-for="Observaciones" rows="10" cols="50" class="text-black-50" placeholder="Observaciones"></textarea>
                        </div>

                    </div>

                    <div class="form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" value="@Model.Estado" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    

                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>