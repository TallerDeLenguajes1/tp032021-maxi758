@model tp6.ViewModels.PedidoViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AltaPedido</title>
</head>
<body>

    <h4>Pedido</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditPedido" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id"/>

                </div>
                <div class="form-check-inline">

                    <div class="form-group">
                        <label for="Cadete" class="control-label">Seleccione cadete</label>
                        <select for="Cadete" name="CadeteId">
                            @foreach (var Cadete in Model.Cadetes)
                            {
                                <option value="@Cadete.Id" selected="@(Cadete.Id == Model.CadeteId)">@Cadete.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-check-inline">

                    <div class="form-group">
                        <label for="Cliente" class="control-label">Seleccione cliente</label>
                        <select for="Cliente" name="ClienteId">
                            @foreach (var Cliente in Model.Clientes)
                            {
                                <option value="@Cliente.Id" selected="@(Cliente.Id == Model.ClienteId)">@Cliente.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="bg-transparent">
                    <div class="form-group">
                        <label for="Observaciones" class="control-label">Observaciones</label>
                        <div>
                            <textarea asp-for="Observaciones" rows="10" cols="50" class="text-black-50" value="@Model.Observaciones"></textarea>
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="Estado" class="control-label">Estado del pedido</label>
                        <select asp-for="Estado">
                            <option value="1">Recibido</option>
                            <option value="2">Realizandose</option>
                            <option value="3">Entregado</option>
                            <option value="4">Desconocido</option>
                        </select>
                        <span validation-for="Estado" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>